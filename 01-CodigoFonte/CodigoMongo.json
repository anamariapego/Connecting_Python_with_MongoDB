// Relacionando as collections e extraindo o país

db.Carros.aggregate([
  {
    $lookup: {
      from: "Montadoras",
      localField: "Montadora",
      foreignField: "Montadora",
      as: "montadora_carro"
    }
  },
  {
     "$unwind": "$montadora_carro"
  },
  {
    $project: {
      _id: "$_id",
      Carro: "$Carro",
      Cor: "$Cor",
      Montadora: "$Montadora",
      Pais: "$montadora_carro.Pais"
    }
  }
])

