// Agrupando as informações pelo país


db.Carros.aggregate([
  {
    $lookup: {
      from: "Montadoras",
      localField: "Montadora",
      foreignField: "Montadora",
      as: "montadora_carro"
    }
  },
  {
     "$unwind": "$montadora_carro"
  },
  {
    $group: {
      _id: "$montadora_carro.Pais",
      Carros: { $sum: 1 }
    }
  }
])

